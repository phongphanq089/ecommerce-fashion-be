{
  "name": "ecommerce-fashion-be",
  "version": "1.0.0",
  "description": "Fashion ecommerce with Fastify and TypeScript",
  "main": "server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --clear --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "npx tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:push": "npx drizzle-kit push",
    "db:studio": "npx drizzle-kit studio",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:drop": "npx drizzle-kit drop",
    "db:reset": "npx drizzle-kit push --force",
    "db:pull": "npx drizzle-kit introspect",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@getbrevo/brevo": "^3.0.1",
    "@neondatabase/serverless": "^1.0.2",
    "@paralleldrive/cuid2": "^3.0.6",
    "@sentry/node": "^10.15.0",
    "bcryptjs": "^3.0.3",
    "cfonts": "^2.4.8",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.0.0",
    "imagekit": "^6.0.0",
    "juice": "^11.0.3",
    "module-alias": "^2.2.3",
    "mustache": "^4.2.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.3",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.11",
    "zod-validation-error": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/ms": "^2.1.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  }
}
