{
  "name": "ecommerce-fashion-be",
  "version": "1.0.0",
  "description": "Fashion ecommerce with Fastify and TypeScript",
  "main": "server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --clear --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma_migrate": "npx prisma migrate dev --name init",
    "generate_type_client": "npx prisma generate",
    "reset-db": "prisma migrate reset",
    "history": "npx prisma migrate status"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.16.2",
    "@sentry/node": "^10.15.0",
    "cfonts": "^2.4.8",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.0.0",
    "imagekit": "^6.0.0",
    "module-alias": "^2.2.3",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.11",
    "zod-validation-error": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
