CLIENT_ORIGIN =
CLIENT_URL =
DATABASE_URL =
DIRECT_URL =
HOST =
IMAGE_KIT_PRIVATE_KEY =
IMAGE_KIT_PUBLIC_KEY =
IMAGE_KIT_URLENDOINT =
# production
NODE_ENV=
NPM_CONFIG_PRODUCTION =
PORT = ""
SERVER_URL =
# --- Server Configuration ---
# Options: development, production, test
NODE_ENV=development
PORT=3000
# Use 0.0.0.0 for Docker/Cloud deployment, 127.0.0.1 for local dev
HOST=127.0.0.1

# --- URLs ---
# The origin of your backend (CORS)
CLIENT_ORIGIN=http://localhost:3000
# The URL of your frontend
CLIENT_URL=http://localhost:3000
# The base URL of your backend server
SERVER_URL=http://localhost:3000
# Sentry DSN for error tracking
SENTRY_URL=

# --- Database (Prisma/Drizzle) ---
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/db_name?sslmode=require
DIRECT_URL=postgresql://user:password@localhost:5432/db_name?sslmode=require

# --- Auth / JWT ---
# Use a long, random string for signatures
ACCESS_TOKEN_SECRET_SIGNATURE=your_random_secret_here
ACCESS_TOKEN_LIFE=1h
REFRESH_TOKEN_SECRET_SIGNATURE=your_random_refresh_secret_here
REFRESH_TOKEN_LIFE=7d
BCRYPT_ROUNDS=10

# --- Security ---
# Secret for signing cookies
COOKIE_SECRET=your_cookie_secret_here

# --- Mail Service (Brevo/Sendinblue) ---
BREVO_API_KEY=your_brevo_api_key
ADMIN_EMAIL_ADDRESS=admin@example.com
ADMIN_EMAIL_NAME="Admin Name"

# --- Image Hosting (ImageKit) ---
IMAGE_KIT_PUBLIC_KEY=your_imagekit_public_key
IMAGE_KIT_PRIVATE_KEY=your_imagekit_private_key
IMAGE_KIT_URLENDOINT=https://ik.imagekit.io/your_id

# --- Others ---
NPM_CONFIG_PRODUCTION=false
